<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hackertronix.unspalshapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.hackertronix.unspalshapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.hackertronix.unspalshapp.Home" />
        <activity android:name="com.example.hackertronix.unspalshapp.Browse" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f61375f6d805385167adaed63d0eb0ef1f66b7dd" />

        <activity android:name="com.example.hackertronix.unspalshapp.FullScreenImage" />

        <provider
            android:name="com.example.hackertronix.unspalshapp.database.FavoriteProvider"
            android:authorities="com.example.hackertronix.unspalshapp"
            android:exported="false" />

        <activity android:name="com.example.hackertronix.unspalshapp.Favorites">

        </activity>

        <receiver android:name="com.example.hackertronix.unspalshapp.widget.FavoriteWidgetProvider"
            android:label="@string/widget_name">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.hackertronix.firebaseauthtest.utils.API.ACTION_DATABASE_UPDATED"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_info"/>
        </receiver>


        <service android:name="com.example.hackertronix.unspalshapp.widget.FavoriteWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

    </application>

</manifest>